<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/relativeLayout_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:height="50dp"
        android:background="@color/color1"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/relativeLayout_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:height="50dp"
        android:background="@color/color2"
        android:layout_above="@id/relativeLayout_view1"
        android:layout_alignLeft="@id/relativeLayout_view1"/>
    <TextView
        android:id="@+id/relativeLayout_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:height="50dp"
        android:background="@color/color3"
        android:layout_below="@id/relativeLayout_view1"
        android:layout_alignLeft="@id/relativeLayout_view1"/>
    <TextView
        android:id="@+id/relativeLayout_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:height="50dp"
        android:background="@color/color4"
        android:layout_toLeftOf="@id/relativeLayout_view1"
        android:layout_alignTop="@id/relativeLayout_view1"/>
    <TextView
        android:id="@+id/relativeLayout_view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:height="50dp"
        android:background="@color/color5"
        android:layout_toRightOf="@id/relativeLayout_view1"
        android:layout_alignTop="@id/relativeLayout_view1"/>




</RelativeLayout>