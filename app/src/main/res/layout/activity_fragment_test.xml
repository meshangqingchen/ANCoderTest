<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTest.FragmentTestActivity">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragement_linearlayout"
        />

    <LinearLayout
        android:id="@+id/fragement_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/bottmimageview1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/bomb5"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/bottmimageview2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/bomb14"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/bottmimageview3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/bomb6"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/bottmimageview4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/bomb7"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>